{{outlet}}

<div class="form-wrapper">
  {{#if flashMessage}}
    <div class="{{flashMessage.cssClass}}">
      {{flashMessage.message}}
    </div>
  {{/if}}

  <div class="status-bubble">
    <span class="bold">${{amountNeeded}}</span> still needed to fund this project
  </div>
  <div class="status-bar">
    <div class="amount-achieved" style={{amountAchievedWidthClass}}></div>
    <div class="amount-needed"></div>
  </div>
  <div class="form-card">
    <h2>Only {{model.event.daysLeft}} days left to fund this project.</h2>

    <p>Join the <span class="bold">{{model.event.totalDonors}}</span> other donors who have already supported this project.</p>

    <div class="submit-wrapper">
      <div class="input-wrapper">
        {{input type="number" value=model.donationValue min=0}}
      </div>
      <button {{action "submitDonation"}}>Give Now</button>
    </div>
  </div>
</div>
